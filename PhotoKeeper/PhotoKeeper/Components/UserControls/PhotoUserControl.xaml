<UserControl x:Class="PhotoKeeper.Components.UserControls.PhotoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoKeeper.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="2" Margin="10" Height="300" Width="200">
        <Grid Background="White">
            <StackPanel>
                <Image Source="{Binding ImageBite}" x:Name="PhotoImg" Height="170" Margin="5">
                    
                </Image>
                <TextBlock x:Name="DescriptionTb"></TextBlock>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <TextBlock>Автор:</TextBlock>
                <TextBlock x:Name="AuthorTb"></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
