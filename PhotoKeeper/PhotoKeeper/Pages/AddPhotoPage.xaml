<Page x:Class="PhotoKeeper.Pages.AddPhotoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhotoKeeper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPhotoPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="EditImageBtn" Click="EditImageBtn_Click">
                Изменить изображение
            </Button>
            <Image Height="100" Name="MainImage"></Image>
            <ComboBox x:Name="PetCb">
                <ComboBoxItem>Котенок Ра</ComboBoxItem>
                <ComboBoxItem>Собачка Нуби</ComboBoxItem>
                <ComboBoxItem>Оба</ComboBoxItem>
            </ComboBox>
            <TextBox x:Name="DescriptionTb"></TextBox>
            <Button x:Name="SaveBtn" Click="SaveBtn_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Page>
